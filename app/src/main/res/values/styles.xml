<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV -->
    <style name="Theme.MyTvApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Backgrounds -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:statusBarColor">#000000</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0B0B0</item>

        <!-- Accent color for TV UI -->
        <item name="colorAccent">#FFD700</item> <!-- bright gold/yellow for visibility -->

        <!-- Optional: explicitly set toast text color (for pre-Android 12) -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8dp</item>
    </style>
</resources>