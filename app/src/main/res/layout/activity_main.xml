<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".presentation.activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_12dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/opensans_condensed_bold"
            android:gravity="center"
            android:nextFocusLeft="@id/tvSettings"
            android:nextFocusRight="@id/tvExplore"
            android:nextFocusDown="@id/fragmentContainer"
            android:text="@string/home"
            android:textColor="@color/tab_color_selector"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvExplore"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/opensans_condensed_bold"
            android:gravity="center"
            android:nextFocusLeft="@id/tvHome"
            android:nextFocusRight="@id/tvSettings"
            android:nextFocusDown="@id/fragmentContainer"
            android:text="@string/explore"
            android:textColor="@color/tab_color_selector"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvSettings"
            app:layout_constraintStart_toEndOf="@id/tvHome"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/opensans_condensed_bold"
            android:gravity="center"
            android:nextFocusLeft="@id/tvExplore"
            android:nextFocusRight="@id/tvHome"
            android:nextFocusDown="@id/fragmentContainer"
            android:text="@string/settings"
            android:textColor="@color/tab_color_selector"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvExplore"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDivider" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@id/clTabs" />

</androidx.constraintlayout.widget.ConstraintLayout>